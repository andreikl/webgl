.tutorial1
    h1 Example 1
    #fps ---
    canvas#webglcanvas(style={border: 'none', width: '500px', height: '500px'}) Canvas element is not supported
    form#configure-form
        input(type='submit' name='GetSphere' value='Get Sphere')
    script#shader-vs(type='x-shader/x-vertex').
        attribute vec3 aVertexPosition;

        uniform mat4 uMVMatrix;
        uniform mat4 uPMatrix;

        void main(void) {
            gl_Position = uPMatrix * uMVMatrix * vec4(aVertexPosition, 1.0);
        }

    script#shader-fs(type='x-shader/x-fragment').
        precision mediump float;

        uniform vec4 uMaterialColor;

        void main(void) {
            gl_FragColor = uMaterialColor;
        }
